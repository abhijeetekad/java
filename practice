//1.     
Write a program to demonstrate status of key on an
Applet window such as KeyPressed, KeyReleased, KeyUp, KeyDown.

package javapractise2;
import java.awt.FlowLayout;
import java.awt.Frame;
import java.awt.Label;
import java.awt.TextField;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;

public class user2 implements KeyListener {
	Frame jf;
	Label l1,l2;
	TextField field1;
	String s;
	user2(){
		jf=new Frame("Handeling Event");
		l1=new Label("Press any key");
		l2=new Label();
		field1=new TextField(20);
		jf.setSize(360,200);
		jf.setLayout(new FlowLayout());
		jf.add(l1);
		jf.add(field1);
		jf.add(l2);
		field1.addKeyListener(this);
		jf.setVisible(true);
	}
	
	public static void main(String[] args) {
		new user2();
	}
	@Override
	public void keyTyped(KeyEvent e) {
		// TODO Auto-generated method stub
		s+="keyTyped";
		l2.setText(s);
		jf.setVisible(true);
		s="";
	}

	@Override
	public void keyPressed(KeyEvent e) {
		// TODO Auto-generated method stub
		s=""+e.getKeyCode()+"";
		l2.setText(s);
	}

	@Override
	public void keyReleased(KeyEvent e) {
		// TODO Auto-generated method stub
		s+="Key Released";
		l2.setText(s);
		jf.setVisible(true);
		s="";
	}

}
</details>

